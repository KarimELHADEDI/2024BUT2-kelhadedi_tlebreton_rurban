<%- include("header") -%>
    <%- include("nav") -%>

        <head>
            <link rel="stylesheet" href="cat.style.css">
        </head>

        <div class="cat_list">
            <% produits.forEach(loc=> { %>
                <div class="cat_item">
                    <img class="image" src="/img/equipement/<%= loc.produit_id %>.webp"
                        alt="<%= loc.marque %> <%= loc.modele %>">
                    <div class="cat_nfo">
                        <h2>
                            <%= loc.marque %>
                                <%= loc.modele %>
                        </h2>
                        <p>
                            <%= loc.description %>
                        </p>
                        <p>Du <%= loc.date_debut %> au <%= loc.date_fin %>
                        </p>
                    </div>
                    <div class="cat_price">
                        <p class="cat_dispo">
                            <%= loc.etat %>
                        </p>
                        <p>
                            <%= loc.prix_location %>â‚¬/mois
                        </p>
                        <form action="/location/delete/<%= loc.location_id %>" method="POST">
                            <button type="submit">Confirmer le retour</button>
                        </form>
                    </div>
                </div>
                <% }); %>
        </div>



        <%- include("footer") -%>